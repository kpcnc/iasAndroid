<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:id="@+id/activity_id_pw_search"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        >
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/id_found_text"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        android:layout_marginBottom="20dp"
        />
        <android.support.design.widget.TextInputEditText
            android:id="@+id/search_id_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="@string/ias_user_name"
            android:textColorHint="#4d4d4d"
            android:inputType="text"
            android:textSize="14sp"
            />
        <android.support.design.widget.TextInputEditText
            android:id="@+id/search_id_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="@string/ias_email"
            android:textColorHint="#4d4d4d"
            android:inputType="textEmailAddress"
            android:textSize="14sp"
            />
        <Button
            android:id="@+id/btn_id_search"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/round_btn"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:text="@string/btn_ias_id_search"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:onClick="onClick"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pw_found_text"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="25dp"
            />
        <android.support.design.widget.TextInputEditText
            android:id="@+id/search_pw_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="@string/ias_id"
            android:textColorHint="#4d4d4d"
            android:inputType="textUri"
            android:textSize="14sp"
            />
        <android.support.design.widget.TextInputEditText
            android:id="@+id/search_pw_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="@string/ias_user_name"
            android:textColorHint="#4d4d4d"
            android:inputType="text"
            android:textSize="14sp"
            />
        <android.support.design.widget.TextInputEditText
            android:id="@+id/search_pw_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="@string/ias_email"
            android:textColorHint="#4d4d4d"
            android:inputType="textEmailAddress"
            android:textSize="14sp"
            />

        <Button
            android:id="@+id/btn_pw_search"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/round_btn"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:text="@string/btn_ias_pw_search"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:onClick="onClick"
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>
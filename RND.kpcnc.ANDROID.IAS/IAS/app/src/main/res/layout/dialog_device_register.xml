<?xml version="1.0" encoding="utf-8"?>
<!-- UI 12 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/device_registration"
        android:textSize="15sp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:textColor="#757575"
        />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/device_name"
            android:textColorHint="#4d4d4d"
            android:inputType="text"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputEditText
        android:id="@+id/device_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:hint="@string/request_password"
        android:textColorHint="#4d4d4d"
        android:inputType="textPassword"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="right"
        >
        <TextView
            android:id="@+id/device_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_cancel2"
            android:textSize="15sp"
            android:textColor="#cacaca"
            android:onClick="onClick"
            />
        <TextView
            android:id="@+id/device_registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_registration"
            android:textColor="#2397f3"
            android:layout_marginLeft="30dp"
            android:textSize="15sp"
            android:onClick="onClick"
            />
    </LinearLayout>
</LinearLayout>
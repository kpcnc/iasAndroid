<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    android:fitsSystemWindows="true"
    >
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:src="@drawable/logo"
            android:layout_marginBottom="50dp"
            />
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="@string/ias_id"
            android:id="@+id/ias_id"
            android:textColorHint="#4d4d4d"
            android:inputType="textUri"
            android:textSize="16sp"
            />
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="@string/ias_password"
            android:id="@+id/ias_password"
            android:textColorHint="#4d4d4d"
            android:inputType="textPassword"
            android:textSize="16sp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1a99d9"
            android:text="@string/btn_ias_login"
            android:id="@+id/btn_ias_login"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:onClick="onClick"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            >
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chk_auto_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ias_auto_login"
                android:layout_marginLeft="2dp"
                android:textSize="15sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ias_signin"
                android:id="@+id/ias_signin"
                android:layout_marginLeft="2dp"
                android:textSize="15sp"
                android:textColor="#1a99d9"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ias_id_pw_search"
                android:id="@+id/ias_id_pw_search"
                android:layout_marginLeft="30dp"
                android:textSize="15sp"
                android:textColor="#1a99d9"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>